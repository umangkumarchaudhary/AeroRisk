# ============================================
# AeroRisk Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aerorisk
POSTGRES_USER=aerorisk
POSTGRES_PASSWORD=aerorisk_secure_password_2024

# Full database URL (constructed from above or override directly)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_WORKERS=1

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# External APIs
# ============================================
# OpenWeather API (get free key at: https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ============================================
# Dashboard Configuration
# ============================================
STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# ============================================
# ML Model Configuration
# ============================================
MODEL_PATH=./models
MODEL_VERSION=v1.0.0

# Risk thresholds
RISK_THRESHOLD_HIGH=70
RISK_THRESHOLD_MEDIUM=40

# ============================================
# Data Paths
# ============================================
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_EXTERNAL_PATH=./data/external

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Prefect (Pipeline Orchestration)
# ============================================
PREFECT_API_URL=http://localhost:4200/api

# ============================================
# Environment
# ============================================
ENVIRONMENT=development
